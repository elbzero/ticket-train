.panel.panel-info
  .panel-heading
    %strong Editing Ticket
  .panel-body
    = render partial: "form"
    %br
    .panel.panel-info
      .panel-heading
        %strong Notes
      .paenl-body
        %table.table.table-striped
          %tr
            %th Note
            %th Created at
          - @ticket_notes.each do | ticket_note |
            %tr
              %td= ticket_note.note
              %td= ticket_note.created_at
    .panel.panel-info
      .panel-heading
        %strong Work Logs
        .buttons
          = link_to "Add Work Log", new_ticket_work_log_path(@ticket), class: 'btn btn-xs btn-success'
      .panel-body
        %table.table.table-striped
          %tr
            %th Start Time
            %th End Time
            %th Total Time
          - @work_logs.each do | work_log |
            %tr
              %td= work_log.start_time
              %td= work_log.end_time
              %td= work_log.total_time
          %tr
            %th{ colspan: 3 } Total Time Worked #{WorkLog.ticket_total(@ticket)}
