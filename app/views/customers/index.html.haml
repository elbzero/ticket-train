- model_class = Customer
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:vip)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @customers.each do |c|
      %tr
        %td= link_to c.id, customer_path(c)
        %td= c.first_name
        %td= c.last_name
        %td= c.vip
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_customer_path(c), :class => 'btn btn-default btn-xs'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), customer_path(c), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_customer_path, :class => 'btn btn-primary'
